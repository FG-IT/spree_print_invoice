<% if can? :show, Spree::Order %>
  <% if @order && @order.completed_at? %>

    <%= button_link_to Spree.t(:invoice, scope: [:print_invoice]),
                       admin_admin_order_invoice_path(@order.number, format: :pdf),
                       method: :GET,
                       icon: 'file.svg',
                       target: '_blank'
    %>
  <% end %>
<% end %>
